<div class="back position-relative" >
    <div class="forms">
        <%= simple_form_for [@brand, @campaign] do |f| %>
        <%= f.input :name, placeholder: "nike" %>
        <%= f.input :brief, placeholder: "looking for a new influencer" %>
        <%= f.input :country_code, label:"Country" %>
        <%= f.association :activity %>
        <%= f.input :language, placeholder: "english" %>
        <%= f.input :start_date, as: :string, input_html: {class:"datepicker"} %>
        <%= f.input :end_date,as: :string, input_html: {class:"datepicker"} %>
        <%= f.submit "New campaign",id:"btn_right", class: "btn btn-primary"  %>
        <% end %>
    </div>
    <%= image_tag "Saly-24.png", id:"image_new", class:"position-absolute"%>
</div>


